{
  "root": true,
  "plugins": ["import"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "extends": [
    "plugin:import/recommended",
    "finn",
    "finn/node",
    "finn-prettier"
  ],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": false
      }
    ]
  },
  "overrides": [
    {
      "files": "test/**/*",
      "env": {
        "jest": true,
        "node": true
      },
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": true
          }
        ]
      }
    }
  ]
}
