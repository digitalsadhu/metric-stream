{
  "name": "@metrics/client",
  "version": "1.0.0",
  "description": "Streaming system independent metric production",
  "main": "lib/client.js",
  "scripts": {
    "bench": "node benchmark/benchmark.js",
    "test": "jest --coverage",
    "lint:format": "eslint --fix .",
    "lint": "eslint ."
  },
  "author": "Richard Walker <richard.walker@finn.no>",
  "license": "MIT",
  "dependencies": {
    "readable-stream": "^3.0.6",
    "time-span": "^2.0.0"
  },
  "devDependencies": {
    "eslint": "^5.10.0",
    "eslint-config-finn": "^3.0.0",
    "eslint-config-finn-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.9.0",
    "benchmark": "^2.1.4",
    "jest": "^23.6.0",
    "prettier": "^1.11.1",
    "lolex": "^3.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "clearMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 4,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "tabWidth": 2
        }
      },
      {
        "files": ".eslintrc",
        "options": {
          "parser": "json",
          "tabWidth": 2
        }
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metrics-js/client.git"
  }
}
