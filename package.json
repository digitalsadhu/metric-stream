{
  "name": "metric-stream",
  "version": "0.0.0-development",
  "description": "Streaming system independent metric production",
  "main": "lib/client.js",
  "scripts": {
    "bench": "node benchmark/benchmark.js",
    "test": "jest --coverage",
    "lint:format": "eslint --fix .",
    "lint": "eslint .",
    "lint:commit": "commitlint --from=HEAD~1",
    "precommit": "lint-staged",
    "cm": "git-cz",
    "semantic-release": "semantic-release"
  },
  "author": "Richard Walker <richard.walker@finn.no>",
  "license": "MIT",
  "dependencies": {
    "readable-stream": "^2.3.5",
    "time-span": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.18.2",
    "eslint-config-finn": "^3.0.0",
    "eslint-config-finn-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.9.0",
    "get-stream": "^3.0.0",
    "benchmark": "^2.1.4",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1",
    "semantic-release": "^11.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "clearMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 4,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "tabWidth": 2
        }
      },
      {
        "files": ".eslintrc",
        "options": {
          "parser": "json",
          "tabWidth": 2
        }
      }
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --config ./.eslintrc",
      "git add"
    ],
    "{*.json,*.md,.eslintrc}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
