{
  "name": "@metrics/client",
  "version": "1.0.0",
  "description": "Streaming system independent metric production",
  "main": "lib/client.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "bench": "node benchmark/benchmark.js",
    "test": "jest --coverage",
    "lint:format": "eslint --fix .",
    "lint": "eslint .",
    "lint:commit": "commitlint --from=HEAD~1",
    "precommit": "lint-staged",
    "cm": "git-cz",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "author": "Richard Walker <richard.walker@finn.no>",
  "license": "MIT",
  "dependencies": {
    "readable-stream": "^3.0.6",
    "time-span": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.10.0",
    "eslint-config-finn": "^3.0.0",
    "eslint-config-finn-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.9.0",
    "benchmark": "^2.1.4",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.11.1",
    "semantic-release": "^15.6.0",
    "travis-deploy-once": "^5.0.0",
    "lolex": "^3.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "clearMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 4,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "tabWidth": 2
        }
      },
      {
        "files": ".eslintrc",
        "options": {
          "parser": "json",
          "tabWidth": 2
        }
      }
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --config ./.eslintrc",
      "git add"
    ],
    "{*.json,*.md,.eslintrc}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metrics-js/client.git"
  }
}
